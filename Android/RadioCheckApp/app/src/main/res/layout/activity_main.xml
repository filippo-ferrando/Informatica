<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTitolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applicazione prova UI"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="right"
                android:text="Nome"
                android:textColor="@color/teal_700"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eta"
                android:textColor="@color/teal_700"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mail"
                android:textColor="@color/teal_700"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblIndirizzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Indirizzo"
                android:textColor="@color/teal_700"
                android:textSize="24sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/optInformatica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Informatica"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/optElettrotecnica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elettrotecnica"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/optMeccanica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meccanica"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/optRobotica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Robotica"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/optChimica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chimica"
                    android:textSize="24sp" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblHobbies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hobbies"
                android:textColor="@color/teal_700"
                android:textSize="24sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/chkMusica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Musica"
                    android:textSize="24sp" />

                <CheckBox
                    android:id="@+id/chkTeatro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teatro"
                    android:textSize="24sp" />

                <CheckBox
                    android:id="@+id/chkSport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sport"
                    android:textSize="24sp" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btnInvia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Invia dati"
            android:textSize="30sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>