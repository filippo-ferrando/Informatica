<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ConvertitoreLiquidi.AppBarOverlay"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTitolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Covertitore"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/lblLitri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Litri"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/txtLitri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lblGalloni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galloni"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/txtGalloni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnLitriGalloni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Litri --> Galloni"
            app:backgroundTint="@color/teal_200" />

        <Button
            android:id="@+id/btnGalloniLitri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galloni --> Litri"
            app:backgroundTint="@color/purple_700" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>